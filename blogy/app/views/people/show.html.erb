<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>


<h2>Cars:</h2>
<% @person.cars.each do |car| %>
  
  <p>Make: <%=car.make%></p>
  <p>Model: <%=car.model%></p>
  <p>Year: <%=car.year%></p>
  <p>Sunroof: <%=car.sunroof%></p>
  <p>Color: <%=car.color%></p>
  <% end %>


<h2>Add a Car:</h2>
<%= form_with(model: [ @person, @person.cars.build ], local: true) do |form| %>


  <div class="field">
    <%= form.label :make %>
    <%= form.text_field :make %>
  </div>

  <div class="field">
    <%= form.label :model %>
    <%= form.text_field :model %>
  </div>

  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year %>
  </div>

  <div class="field">
    <%= form.label :sunroof %>
    <%= form.check_box :sunroof %>
  </div>

  <div class="field">
    <%= form.label :color %>
    <%= form.text_field :color %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
